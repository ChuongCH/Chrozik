{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Develop",
			"request": "launch",
			"type": "dart",
			"program": "lib/main/app/development.dart",
			"args": [
				"--flavor",
				"development",
				"--target",
				"lib/main/app/development.dart"
			],
			"toolArgs": ["--dart-define", "DEBUG_LOGGER_ENABLED=true"]
			// flutter run --flavor development --target lib/main/app/development.dart --dart-define DEBUG_LOGGER_ENABLED=true
		},
		{
			"name": "app",
			"cwd": "app",
			"request": "launch",
			"type": "dart"
		},
		{
			"name": "app (profile mode)",
			"cwd": "app",
			"request": "launch",
			"type": "dart",
			"flutterMode": "profile"
		},
		{
			"name": "app (release mode)",
			"cwd": "app",
			"request": "launch",
			"type": "dart",
			"flutterMode": "release"
		}
	]
}
